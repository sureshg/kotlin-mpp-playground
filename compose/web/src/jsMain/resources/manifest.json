{
  "manifest_version": 3,
  "name": "Compose html Chrome Extension",
  "version": "${version}",
  "description": "Compose html Chrome Extension",
  "permissions": ["activeTab"],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Compose html Chrome Extension",
    "default_icon": {
      "128": "images/icon-128.png"
    }
  }
}